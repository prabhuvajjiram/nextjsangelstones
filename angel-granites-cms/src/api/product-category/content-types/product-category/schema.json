{
  "kind": "collectionType",
  "collectionName": "product_categories",
  "info": {
    "singularName": "product-category",
    "pluralName": "product-categories",
    "displayName": "ProductCategory"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": false
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "featured": {
      "type": "boolean",
      "required": true
    },
    "displayOrder": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "products_content_types": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::products-content-type.products-content-type",
      "mappedBy": "product_categories"
    }
  }
}
